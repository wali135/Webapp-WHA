
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Entries</h2>



<table id="entries" class="table table-bordered table-hover">
    <thead>
        <tr>

            <th>Entry Id</th>
            <th>Driver Name</th>
            <th>Date and Time</th>
            <th>Consumption (ml)</th>
            

        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
               var table= $("#entries").DataTable({
                    ajax: {
                        url: "/api/entries/"+ @ViewBag.Id,
                        dataSrc: ""
            },
                columns:[
                    {
                        data:"id"
                       
                        
                    },
                    {
                        data: "driver.name"
                    },
                    {
                        data: "dateTime"
                    }
                    , {
                        data: "consumption"
                        
                    }
                ]
            });

            

        });
    </script>
}
